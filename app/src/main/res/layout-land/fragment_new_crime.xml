<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/view_camera_and_title"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/crime_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crime_time"
            android:layout_weight="1.00"/>

    </LinearLayout>

    <CheckBox android:id="@+id/crime_solved"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:gravity="bottom"
              android:layout_marginTop="0dp"
              android:text="@string/crime_solved_label"
              android:layout_gravity="top|center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="605dp"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/crime_suspect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_suspect"
            android:layout_weight="1"/>

        <Button
            android:text="@string/crime_report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_report"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Button
            android:text="CREATE CRIME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_crime"
            android:layout_weight="1"/>

        <Button
            android:text="Delete Crime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete_crime"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>